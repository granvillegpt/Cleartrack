    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow unauthenticated access to practitioner applications (for registration)
    match /practitionerApplications/{applicationId} {
      allow read, write: if true;
    }
    
    // Allow unauthenticated access to practitioner invites (for token-based access)
    match /practitionerInvites/{inviteId} {
      allow read, write: if true;
